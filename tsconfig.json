{
    "compilerOptions": {
    "lib": ["es6"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build/",
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true
    },
    "files": [
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/express/index.d.ts",
    ],
    "include": [
    "src/**/*.ts"
    ],
